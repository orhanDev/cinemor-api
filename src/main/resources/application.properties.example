spring.application.name=CinemoR
server.port=8082
# PostgreSQL (Treiber in pom nötig, sonst wird H2 verwendet)
spring.datasource.url=jdbc:postgresql://localhost:5432/cinemor-api
spring.datasource.driver-class-name=org.postgresql.Driver
spring.datasource.username=postgres
spring.datasource.password=YOUR_DB_PASSWORD
spring.jpa.hibernate.ddl-auto=update
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true
spring.sql.init.mode=always
spring.jpa.show-sql=true
logging.file.name=log/cinemorapp.log
logging.pattern.file="%d %-5level [%thread] %logger:%msg%n"
logging.level.org.springframework.web=WARN
logging.level.org.hibernate=INFO
logging.level.com.cinemor=INFO
logging.level.org.springframework.security=DEBUG
springdoc.swagger-ui.path=/swagger-ui.html
springdoc.swagger-ui.operationsSorter=alpha
springdoc.pathsToMatch=/api/**
# Frontend URL für E-Mails (z.B. Reset-Link)
app.frontend-url=http://localhost:5173
app.jwt-secret=GENERATE_A_LONG_RANDOM_SECRET_HERE
app.jwt-expiration-milliseconds=604800000
# E-Mail (Passwort-Reset): Gmail App-Passwort erforderlich!
# Wenn gesetzt: E-Mail wird gesendet. Sonst: Link nur in log/cinemorapp.log
spring.mail.host=smtp.gmail.com
spring.mail.port=587
spring.mail.username=your-email@gmail.com
spring.mail.password=your-app-password-here
spring.mail.properties.mail.smtp.auth=true
spring.mail.properties.mail.smtp.starttls.enable=true
# true = E-Mail senden | false = nur Link in Log schreiben (ohne Gmail)
app.mail-enabled=false
file.upload-dir=uploads
Admin.Email=admin@example.com
Admin.Password=CHANGE_THIS_PASSWORD
Admin.PhoneNumber=(111) 111-1111
User.Email=user@example.com
User.Password=CHANGE_THIS_PASSWORD
User.PhoneNumber=(111) 111-1111
cloudinary.cloud-name=your-cloud-name
cloudinary.api-key=your-api-key
cloudinary.api-secret=your-api-secret
